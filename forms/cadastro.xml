<?xml version="1.0" encoding="UTF-8"?>
<form>
	<id>form</id>
	<method>post</method>
	<action>controller</action>
	<elements>
		<nome>
			<type>text</type>
			<options>
				<label>Nome</label>
				<required>true</required>
			</options>
		</nome>
		
		<group>
			<type>text</type>
			<options>
				<label>Grupo: </label>
				<required>true</required>
			</options>
		</group>

	        <password>
            		<type>password</type>
             		<options>
                 		<label>Senha</label>           
                 		<validators>
                     			<alnum>
                         			<validator>Alnum</validator>
                     			</alnum>
                     			<regex>
                         			<validator>regex</validator>
                         			<options>
                            				<pattern>/^[0-9]/i</pattern>
                         			</options>
                     			</regex>
                     			<strlen>
                         			<validator>StringLength</validator>
                         			<options>
                             				<min>1</min>
                             				<max>3</max>
                         			</options>
                     			</strlen>
                 		</validators>
				<required>true</required>
             		</options>
         	</password>

		<submit>
			<type>submit</type>
			<options>
				<label>Enviar</label>
			</options>
		</submit>
	</elements>
</form>
