<?xml version="1.0" encoding="UTF-8"?>
<form>
	<id>form</id>
	<method>post</method>
	<action>controller</action>
	<elements>
		<nome>
			<type>text</type>
			<options>
				<label>Nome: </label>
				<required>true</required>
			</options>
		</nome>
		
		<group>
			<type>text</type>
			<options>
				<label>Grupo: </label>
				<required>true</required>
			</options>
		</group>

	        <password>
            		<type>password</type>
             		<options>
                 		<label>Senha: </label>
				<description>Apenas números, de 4 a 20 dígitos</description>            
                 		<validators>
                     			<alnum>
                         			<validator>Alnum</validator>
                     			</alnum>
                     			<regex>
                         			<validator>regex</validator>
                         			<options>
                            				<pattern>/^[0-9]/i</pattern>
                         			</options>
                     			</regex>
                     			<strlen>
                         			<validator>StringLength</validator>
                         			<options>
                             				<min>4</min>
                             				<max>20</max>
                         			</options>
                     			</strlen>
                 		</validators>
				<required>true</required>
             		</options>
         	</password>

                <password2>
                        <type>password</type>
                        <options>
                                <label>Confirme a senha: </label>
				<description>Confirme a senha.</description>
                                <validators>
                                        <alnum>
                                                <validator>Alnum</validator>
                                        </alnum>
                                        <regex>
                                                <validator>regex</validator>
                                                <options>
                                                        <pattern>/^[0-9]/i</pattern>
                                                </options>
                                        </regex>
                                        <strlen>
                                                <validator>StringLength</validator>
                                                <options>
                                                        <min>4</min>
                                                        <max>20</max>
                                                </options>
                                        </strlen>
                                </validators>
                                <required>true</required>
                        </options>
                </password2>




		<submit>
			<type>submit</type>
			<options>
				<label>Enviar</label>
			</options>
		</submit>
	</elements>
</form>
